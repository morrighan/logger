{
    "name": "@cichol/logger",
    "version": "2.0.8",
    "description": "A logger based on `winston` for personal projects.",
    "homepage": "https://github.com/morrighan/logger",
    "bugs": {
        "url": "https://github.com/morrighan/logger/issues"
    },
    "license": "MIT",
    "author": {
        "name": "Yongbin Min",
        "email": "contact@cichol.com",
        "url": "https://www.cichol.com/"
    },
    "type": "module",
    "main": "releases/cjs/index.cjs",
    "module": "releases/esm/index.mjs",
    "directories": {
        "lib": "releases"
    },
    "exports": {
        "import": "./releases/esm/index.mjs",
        "require": "./releases/cjs/index.cjs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/morrighan/logger.git"
    },
    "scripts": {
        "build": "npm run build:cjs && npm run build:esm",
        "build:cjs": "BABEL_ENV=\"cjs\" JS_EXTENSION=\".cjs\" npm run compile",
        "build:esm": "BABEL_ENV=\"esm\" JS_EXTENSION=\".mjs\" npm run compile",
        "compile": "npx babel --root-mode upward sources --extensions .js,.ts --out-dir releases/$BABEL_ENV --out-file-extension $JS_EXTENSION --source-maps inline --delete-dir-on-start && npx tsc --project sources --outDir releases/$BABEL_ENV",
        "test": "npm run test:eslint && npm run test:tsc",
        "test:eslint": "npx eslint . --ext .js,.ts",
        "test:tsc": "npx tsc --project . --noEmit"
    },
    "dependencies": {
        "bluebird": "^3.7.2",
        "chalk": "^4.1.1",
        "cli-highlight": "^2.1.11",
        "cls-rtracer": "^2.6.0",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "morgan": "^1.10.0",
        "pretty-bytes": "^5.6.0",
        "pretty-ms": "^7.0.1",
        "reflect-metadata": "^0.1.13",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@babel/cli": "^7.14.3",
        "@babel/core": "^7.14.3",
        "@babel/plugin-transform-runtime": "^7.14.3",
        "@babel/preset-env": "^7.14.2",
        "@babel/preset-typescript": "^7.13.0",
        "@cichol/eslint-config": "^3.0.2",
        "@types/babel__core": "^7.1.14",
        "@types/bluebird": "^3.5.35",
        "@types/lodash": "^4.14.170",
        "@types/morgan": "^1.9.2",
        "@types/node": "^15.6.1",
        "eslint": "^7.27.0",
        "typescript": "^4.2.4"
    },
    "engines": {
        "node": "^14.16.0 || ^16",
        "npm": "^7.12.0"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    }
}
